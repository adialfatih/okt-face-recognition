<% layout('layout') -%>

    <section class="space-y-4">

        <!-- HEADER -->
        <div class="rounded-2xl bg-gradient-to-r from-sky-400 via-sky-500 to-sky-600 text-white p-5 shadow-lg">
            <h1 class="text-2xl font-bold mb-1 flex items-center gap-2">
                <i class="fa-solid fa-users"></i>
                <span>Data Karyawan (HR)</span>
            </h1>
            <p class="opacity-90 text-sm">
                Data ini ditarik langsung dari sistem HR (rjsmanage.data_karyawan). Gunakan pencarian dan navigasi
                halaman untuk melihat karyawan.
            </p>
        </div>

        <!-- FILTER & SEARCH -->
        <div class="card bg-white shadow-sm border border-sky-100">
            <div class="card-body space-y-3">

                <!-- Search Bar -->
                <div class="flex flex-col sm:flex-row gap-3 sm:items-end">
                    <label class="flex-1 form-control">
                        <span class="label-text text-sm font-semibold text-slate-700 mb-1">
                            <i class="fa-solid fa-magnifying-glass mr-1 text-sky-600"></i>
                            Pencarian Karyawan
                        </span>
                        <div class="join w-full">
                            <input id="q" type="text" placeholder="Cari NRP / Nama / Departement / Divisi / Jabatan"
                                class="input input-bordered join-item w-full bg-white border-sky-200
                     focus:outline-none focus:ring-2 focus:ring-sky-300 focus:border-sky-400" />
                            <button id="btnSearch"
                                class="btn join-item bg-sky-600 hover:bg-sky-700 border-sky-600 text-white">
                                <i class="fa-solid fa-magnifying-glass"></i>
                                <span class="hidden sm:inline ml-1">Cari</span>
                            </button>
                        </div>

                    </label>

                </div>


            </div>
        </div>

        <!-- TABEL DESKTOP -->
        <div class="hidden sm:block">
            <div class="overflow-x-auto rounded-2xl border border-sky-100 bg-white shadow-sm">
                <table class="table table-sm table-karyawan">
                    <thead class="bg-sky-50 text-slate-700 text-xs uppercase">
                        <tr>
                            <th class="whitespace-nowrap">NRP</th>
                            <th>Nama</th>
                            <th class="whitespace-nowrap">Departement</th>
                            <th>Divisi</th>
                            <th>Jabatan</th>
                            <th class="whitespace-nowrap">Status</th>
                        </tr>
                    </thead>
                    <tbody id="rows" class="text-sm">
                        <!-- Diisi oleh karyawan.js -->
                    </tbody>
                </table>
            </div>
        </div>

        <!-- LIST MOBILE -->
        <div id="list" class="sm:hidden space-y-2">
            <!-- Diisi oleh karyawan.js -->
        </div>

        <!-- PAGINATION -->
        <div class="flex flex-col gap-2 sm:flex-row sm:items-center sm:justify-between mt-2">

            <!-- Meta info -->
            <div id="meta" class="text-xs text-slate-500">
                â€”
            </div>

            <!-- Pagination controls -->
            <div class="flex items-center justify-end gap-2">
                <div class="join">
                    <button id="prev"
                        class="btn btn-sm join-item bg-white border border-sky-100 hover:bg-sky-50 text-slate-700">
                        <i class="fa-solid fa-angle-left"></i>
                        <span class="hidden sm:inline ml-1">Sebelumnya</span>
                    </button>
                    <button id="next"
                        class="btn btn-sm join-item bg-white border border-sky-100 hover:bg-sky-50 text-slate-700">
                        <span class="hidden sm:inline mr-1">Berikutnya</span>
                        <i class="fa-solid fa-angle-right"></i>
                    </button>
                </div>
            </div>
        </div>
        <!-- Ringkasan di bawah tabel -->
        <div id="summary"
            class="mt-2 text-xs sm:text-sm text-slate-700 bg-white/80 border border-sky-100 rounded-2xl px-3 py-2 shadow-sm">
            <div class="font-semibold text-sky-700 mb-1 flex items-center gap-2">
                <i class="fa-solid fa-chart-pie"></i>
                <span>Ringkasan Karyawan</span>
            </div>
            <div class="grid grid-cols-1 sm:grid-cols-3 gap-1">
                <div>
                    Total Karyawan:
                    <span id="sumTotal" class="font-semibold text-sky-900">-</span>
                </div>
                <div>
                    Total Karyawan Dep Spinning:
                    <span id="sumSpinning" class="font-semibold text-sky-900">-</span>
                </div>
                <div>
                    Total Karyawan Dep Weaving:
                    <span id="sumWeaving" class="font-semibold text-sky-900">-</span>
                </div>
            </div>
        </div>

    </section>

    <script defer src="/public/js/karyawan.js"></script>