<div class="navbar bg-white/80 backdrop-blur sticky top-0 z-30 shadow-sm border-b border-sky-100">
    <div class="flex-none lg:hidden">
        <label for="drawer-menu" class="btn btn-ghost btn-sm">
            <i class="fa-solid fa-bars text-lg"></i>
        </label>
    </div>

    <div class="flex-1">
        <a href="/" class="font-bold text-lg text-sky-700">
            <%= APP_NAME %>
        </a>
    </div>

    <!-- <div class="flex-none hidden lg:flex">
        <a href="/about" class="btn btn-ghost">
            <i class="fa-solid fa-circle-info mr-1"></i> About
        </a>
    </div> -->
    <div class="flex-none flex items-center gap-2">
        <a href="/about" class="btn btn-ghost btn-sm hidden sm:inline-flex">
            <i class="fa-solid fa-circle-info mr-1"></i>
            About
        </a>

        <% if (currentUser) { %>
            <span class="hidden sm:inline text-xs text-sky-900">
                <i class="fa-solid fa-user-circle mr-1"></i>
                <%= currentUser.nama_lengkap %>
                    (<%= currentUser.hak_akses %>)
            </span>
            <form action="/logout" method="post" class="inline">
                <button type="submit"
                    class="btn btn-outline btn-xs sm:btn-sm border-sky-300 text-sky-700 hover:bg-sky-50">
                    <i class="fa-solid fa-right-from-bracket mr-1"></i>
                    <span class="hidden sm:inline">Logout</span>
                </button>
            </form>
            <% } else { %>
                <a href="/login" class="btn btn-primary btn-xs sm:btn-sm">
                    <i class="fa-solid fa-right-to-bracket mr-1"></i>
                    <span class="hidden sm:inline">Login</span>
                </a>
                <% } %>
    </div>

</div>